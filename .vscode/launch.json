{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Entire API",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "DB_HOST": "localhost",
        "DB_PORT": "5555",
        "DB_USER": "my_user",
        "DB_PASSWORD": "my_password",
        "DB_NAME": "my_database"
      },
      "preLaunchTask": "tsc: build - tsconfig.json" // Compila antes de ejecutar
    }
  ]
}
